{
  "monitor_paths": [
    ".",
    "src",
    "scripts",
    "examples"
  ],
  "debounce_delay": 0.5,
  "queue_size": 1000,
  "analysis_workers": 4,
  "websocket_port": 8765,
  "stats_interval": 60,
  "log_level": "INFO",
  "file_extensions": [
    ".py",
    ".js",
    ".ts",
    ".jsx",
    ".tsx",
    ".go",
    ".rs",
    ".java",
    ".cpp",
    ".c",
    ".h",
    ".php"
  ],
  "skip_directories": [
    "node_modules",
    "__pycache__",
    ".git",
    "build",
    "dist",
    "target",
    ".venv",
    "vulnhunter_pytorch_env"
  ],
  "alert_thresholds": {
    "critical": 0.9,
    "high": 0.7,
    "medium": 0.5,
    "low": 0.3
  },
  "notification_settings": {
    "enable_websocket": true,
    "enable_file_log": true,
    "enable_console_alerts": true,
    "max_alerts_per_file": 10
  },
  "performance_settings": {
    "max_file_size_mb": 5,
    "analysis_timeout_seconds": 30,
    "memory_limit_mb": 2048
  }
}