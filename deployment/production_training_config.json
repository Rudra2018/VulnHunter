{
  "model": {
    "base_model_name": "microsoft/codebert-base",
    "hidden_dim": 512,
    "num_vulnerability_classes": 15,
    "num_severity_levels": 4,
    "dropout": 0.1,
    "graph_layers": 3,
    "transformer_layers": 6,
    "attention_heads": 8
  },
  "training": {
    "batch_size": 16,
    "learning_rate": 2e-5,
    "weight_decay": 0.01,
    "epochs": 5,
    "warmup_steps": 500,
    "gradient_clip": 1.0,
    "accumulation_steps": 2
  },
  "advanced_training": {
    "multi_task": true,
    "adversarial_training": true,
    "curriculum_learning": true,
    "meta_learning": false,
    "adversarial_epsilon": 0.1,
    "curriculum_stages": 3
  },
  "formal_verification": {
    "enabled": true,
    "z3_timeout": 30,
    "cbmc_timeout": 60,
    "property_weight": 0.1
  },
  "data": {
    "dataset_path": "data/minimal_dataset.csv",
    "validation_split": 0.2,
    "test_split": 0.1,
    "max_sequence_length": 512,
    "augmentation": true
  },
  "monitoring": {
    "wandb_project": "enhanced-security-intelligence",
    "log_frequency": 100,
    "save_frequency": 1000,
    "early_stopping_patience": 3
  },
  "hardware": {
    "device": "cpu",
    "num_workers": 2,
    "pin_memory": false
  }
}